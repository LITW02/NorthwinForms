@{
    Layout = null;
}
@using MvcApplication17.Models;
@model IEnumerable<Product>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Products</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top: 40px;">
        <form action="/northwind/products">
            <div class="row">
                <div class="col-md-3">
                    <input type="text" name="query" class="form-control" placeholder="Product Name"/>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary btn-block">Search</button>
                </div>
            </div>
        </form>
        <form action="/northwind/addrandom" method="POST">
            <div class="row">
                <div class="col-md-3">
                    <input type="text" name="foo" class="form-control" placeholder="Foo"/>
                </div>
                <div class="col-md-3">
                    <input type="text" name="bar" class="form-control" placeholder="Bar" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
        <table class="table table-hover table-striped table-bordered" style="margin-top: 20px;">
            <tr>
                <th>Name</th>
                <th>Quantity Per Unit</th>
                <th>Unit Price</th>
                <th>Category Name</th>
            </tr>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.QuantityPerUnit</td>
                <td>@product.UnitPrice</td>
                <td>@product.CategoryName</td>
            </tr>
            }
        </table>
    </div>
</body>
</html>
